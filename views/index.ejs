<!doctype html>
<html lang="en">
    <head>
        <!-- jQuery -->
        <script type="text/javascript" src="/lib/jquery-3.4.1.slim.min.js"></script>

        <!-- BS4 & Requirements (Popper) -->
        <script type="text/javascript" src="/lib/popper-1.16.min.js"></script>
        <script type="text/javascript" src="/lib/bootstrap-4.4.1.min.js"></script>
        <link type="text/css" rel="stylesheet" href="/lib/bootstrap-4.4.1.min.css">

        <!-- Custom CSS -->
        <link type="text/css" rel="stylesheet" href="/css/index.css">

        <!-- Custom JS -->
        <script type="text/javascript" src="/js/index.js"></script>

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <title>YelpCamp | Campgrounds</title>
    </head>

    <body>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">YelpCamp</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#campgrounds">Discover</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="/login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/signup" class="nav-link">Sign Up</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container page-wrap">

            <div class="jumbotron mt-5">
                <h1 class="display-4">Welcome to YelpCamp!</h1>
                <p class="lead">View our unique campground locations from all around the world</p>
                <hr class="my-4">
                <p>Are you a campground owner and want to advertise here? It's free!</p>
                <a class="btn btn-primary btn-lg text-capitalize" href="/campground/new" role="button">add new campground</a>
            </div>

            <div class="search-bar d-flex justify-content-center bg-light py-3">
                <form class="form-inline" action="." method="GET">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search campgrounds">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>

            <div class="campgrounds">
                <a name="campgrounds"></a>
                <div class="row">
                    <% for (var i = 0; i < 6; i++) {%>
                        <div class="col-12 col-md-4 col-xl-3 mt-4">
                            <div class="card">
                                <img src="https://images.unsplash.com/photo-1497900304864-273dfb3aae33?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">Card title</h5>
                                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    <a href="#" class="btn btn-primary">Go somewhere</a>
                                </div>
                            </div>
                        </div>
                    <%}%>
                </div>
            </div>

        </div>

    </body>
</html>