<!doctype html>
<html lang="en">
    <head>
        <!-- jQuery -->
        <script type="text/javascript" src="/lib/jquery-3.4.1.slim.min.js"></script>

        <!-- BS4 & Requirements (Popper) -->
        <script type="text/javascript" src="/lib/popper-1.16.min.js"></script>
        <script type="text/javascript" src="/lib/bootstrap-4.4.1.min.js"></script>
        <link type="text/css" rel="stylesheet" href="/lib/bootstrap-4.4.1.min.css">

        <!-- Custom CSS -->
        <link type="text/css" rel="stylesheet" href="/css/new.css">

        <!-- Custom JS -->
        <script type="text/javascript" src="/js/new.js"></script>
        <script src="/lib/simple-mask-money.js"></script>


        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <title>YelpCamp | New Campground</title>
    </head>

    <body>

        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="/">YelpCamp</a>
        </nav>

        <div class="container">
            <div class="wrap bg-light p-3">
                <form action="/campground" method="POST">
                    <h1 class="display-4 mb-4">Campground</h1>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <input class="form-control" type="text" placeholder="Name" name="name" id="name" required>
                            </div>
                            <div class="col">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">$</div>
                                    </div>
                                    <input type="numeric" class="form-control" id="price" value="0,00" placeholder="0,00" aria-describedby="pNight" required>
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="pNight">per night</span>
                                    </div>
                                    <script>SimpleMaskMoney.setMask('#price');</script>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="url" placeholder="Image URL" name="image" id="image" required>

                        <div class="row mt-3 img-preview">
                            <div class="col-md-6 justify-content-center text-center mb-3">
                                <img class="img-thumbnail mt-3" src="https://images.unsplash.com/photo-1497900304864-273dfb3aae33?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" alt="Image preview">
                            </div>
                            <div class="col-md-6 align-self-center text-center image-confirm mt-3 mt-md-0">
                                <p class="lead">Is the image as you wanted?</p>
                                <button type="button" class="btn btn-sm btn-outline-danger mr-2">No</button>
                                <button type="button" class="btn btn-sm btn-outline-success">Yes</button>
                                <small class="form-text text-muted mt-3">You may change it at any time before you create the campground</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" name="description" placeholder="Description" id="description" rows="3" required></textarea>
                    </div>

                    <h1 class="display-4 mb-4">Address</h1>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <input type="text" class="form-control" id="address-1" name="addressOne" placeholder="Address Line 1" required>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="address-2" placeholder="Address Line 2" name="addressTwo">
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <select class="custom-select" id="country" required>
                                    <option selected disabled value="">Country</option>
                                    <option>...</option>
                                </select>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="city" name="city" placeholder="City" required>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="state" name="state" placeholder="Province or State" required>
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="form-row">
                            <div class="col">
                                <input type="text" class="form-control" id="zip" name="zip" placeholder="Postal Code" required>
                            </div>
                            <div class="col">
                                <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone Number" required>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 mb-2">
                        <button type="submit" class="btn btn-lg btn-outline-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>

        <footer class="container-fluid bg-light navbar-light d-flex align-items-center justify-content-center p-0">
            <p class="m-0 p-0">Fernando Picoral @ 2020</p>
        </footer>
    </body>
</html>